<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiwhuUI.Activity.stu_dataActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/stu_data_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/stu_h_back"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/stu_h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/stu_data_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="金春利"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:gravity="center"  />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stu_data_unchecked"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/stu_data_back"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_stu_data_unchecked"
            android:src="@drawable/stu_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:layout_marginLeft="10dip"
            android:paddingBottom="20dip"/>
        <TextView
            android:id="@+id/text_stu_data_unchecked"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_stu_data_unchecked"
            android:text="待审核的活动"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stu_data_checked"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/stu_data_unchecked"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_stu_data_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:src="@drawable/stu_join"/>
        <TextView
            android:id="@+id/text_stu_data_checked"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_stu_data_checked"
            android:text="待参加的活动"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stu_data_taken"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/stu_data_checked"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_stu_data_taken"
            android:src="@drawable/stu_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter"
            android:paddingBottom="20dip"
            android:paddingTop="20dip"/>
        <TextView
            android:id="@+id/text_stu_data_taken"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_stu_data_taken"
            android:text="参加过的活动"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stu_data_store"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/stu_data_taken"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_stu_data_store"
            android:src="@drawable/stu_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
        <TextView
            android:id="@+id/text_stu_data_store"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_stu_data_store"
            android:text="我收藏的活动"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/stu_data_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginBottom="50dip"
            android:text="退出登录"
            android:background="#cbcbcb"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dip"
            android:text="   "/>
    </LinearLayout>
</ScrollView>
