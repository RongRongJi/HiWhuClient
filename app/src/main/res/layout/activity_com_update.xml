<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<include layout="@layout/activity_com_update_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="50dip"
        android:text="活动名称:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/activityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_Name"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_marginRight="100dip"
        android:background="@drawable/edittext"
        android:hint="请输入活动名称"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_bDate"
        android:layout_width="76dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="开始时间:"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/text_Name"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/beginDate"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:text="0000-00-00"

        app:layout_constraintEnd_toStartOf="@+id/beginTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_Name"
        app:layout_constraintTop_toBottomOf="@+id/text_Name"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/beginTime"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:text="00:00"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/activityName"
        tools:layout_editor_absoluteX="243dp" />

    <TextView
        android:id="@+id/text_eDate"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"

        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/text_bDate"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/endDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0000-00-00"
        app:layout_constraintEnd_toEndOf="@+id/beginDate"
        app:layout_constraintStart_toStartOf="@+id/beginDate"
        app:layout_constraintTop_toBottomOf="@+id/beginDate"

        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/endTime"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:text="00:00"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/beginTime"
        tools:layout_editor_absoluteX="244dp" />

    <TextView
        android:id="@+id/text_Signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="需要报名:"

        app:layout_constraintEnd_toStartOf="@+id/endDate"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/endDate"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="45dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/text_Signup"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/text_Signup"
        app:layout_constraintTop_toBottomOf="@+id/text_eDate"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="122dp">

        <RadioButton
            android:id="@+id/button_need"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="需要" />

        <RadioButton
            android:id="@+id/button_neednot"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不需要" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_Signtime"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="报名时间:"

        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/text_Signup"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/beginDate_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0000-00-00"
        app:layout_constraintEnd_toEndOf="@+id/endDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_Signup"
        app:layout_constraintTop_toBottomOf="@+id/text_Signup"
        app:layout_constraintVertical_bias="0.0"

        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/beginTime_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:text="00:00"

        app:layout_constraintEnd_toEndOf="@+id/endTime"
        app:layout_constraintStart_toStartOf="@+id/endTime"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="244dp" />

    <TextView
        android:id="@+id/text_endTime"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="截止时间:"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/endDate_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:text="0000-00-00"
        app:layout_constraintEnd_toEndOf="@+id/beginDate_signup"
        app:layout_constraintTop_toTopOf="@+id/text_endTime"
        tools:layout_editor_absoluteX="120dp" />

    <Button
        android:id="@+id/endTime_signup"
        android:layout_width="89dp"
        android:layout_height="0dp"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginTime_signup"
        tools:layout_editor_absoluteX="244dp" />

    <TextView
        android:id="@+id/text_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="活动地点:"
        app:layout_constraintTop_toBottomOf="@+id/text_endTime"
        tools:layout_editor_absoluteX="45dp" />

    <ImageButton
        android:id="@+id/button_address"
        android:layout_width="39dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="@+id/endDate_signup"
        app:layout_constraintStart_toStartOf="@+id/text_map"

        app:srcCompat="@android:drawable/ic_dialog_map"

        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:text="请选择地点"
        android:background="@drawable/edittext"

        app:layout_constraintStart_toEndOf="@+id/button_address"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/text_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="封面图片:"

        app:layout_constraintTop_toBottomOf="@+id/text_map"

        tools:layout_editor_absoluteX="45dp" />

    <ImageButton
        android:id="@+id/button_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="@+id/button_address"
        app:layout_constraintStart_toStartOf="@+id/button_address"

        app:srcCompat="@android:drawable/ic_menu_gallery"

        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/text_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:text="请选择图片"
        android:background="@drawable/edittext"
        app:layout_constraintBottom_toBottomOf="@+id/button_image"

        app:layout_constraintStart_toStartOf="@+id/text_address"
        app:layout_constraintTop_toBottomOf="@+id/text_address"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:text="活动简介:"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/text_pic"

        app:layout_constraintTop_toBottomOf="@+id/text_image"

        tools:layout_editor_absoluteX="45dp" />

    <EditText
        android:id="@+id/introduction"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:hint="请输入活动简介..."
        android:gravity="left|top"
        android:background="@drawable/edittext"
        android:inputType="textMultiLine"

        app:layout_constraintHorizontal_bias="0.529"

        app:layout_constraintTop_toBottomOf="@+id/text_intro"
        tools:layout_editor_absoluteX="44dp" />

    </RelativeLayout>
</LinearLayout>
