<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.hiwhuUI.Activity.com_dataActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/com_data_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/com_h_back"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/com_h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/com_data_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="国际软件学院体育部"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:gravity="center" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/com_data_describe"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/com_data_back"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_com_data_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/com_profile"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:layout_marginLeft="10dip"
            android:paddingBottom="20dip"/>
        <TextView
            android:id="@+id/text_com_data_describe"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_com_data_describe"
            android:text="社团资料"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/com_data_unchecked"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/com_data_describe"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_com_data_unchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/com_unchecked"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
        <TextView
            android:id="@+id/text_com_data_unchecked"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_com_data_unchecked"
            android:text="审核报名人员"
            android:gravity="center_vertical|left"
            android:textSize="17sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/com_data_history"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@+id/com_data_unchecked"
        android:background="@drawable/bottom_border">
        <ImageView
            android:id="@+id/image_com_data_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/com_history"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
        <TextView
            android:id="@+id/text_com_data_history"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_com_data_history"
            android:text="发布历史"
            android:gravity="center_vertical|left"
            android:textSize="17sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jump1"
            android:scaleType="fitCenter"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_com_data_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:text="退出登录"
            android:background="#cbcbcb"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </RelativeLayout>
</LinearLayout>
