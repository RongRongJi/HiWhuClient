<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_com_update_title" />

<!--标题：个人信息-->
    <TextView
        android:id="@+id/signUpTitle1"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:text="个人信息"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dip"/>

<!--姓名-->
        <TextView
            android:id="@+id/p1_text_stu_num"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"/>
        <EditText
            android:id="@+id/p1_edit_stu_num"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:hint="请输入姓名"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/acu_line"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>

<!--学号-->
        <TextView
            android:id="@+id/p2_text_stu_username"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="学号"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"/>
        <EditText
            android:id="@+id/p2_edit_stu_username"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:hint="请输入学号"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/acu_line"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>

<!--标题：联系方式-->

    <TextView
        android:id="@+id/signUpTitle2"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_vertical"
        android:text="联系方式"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dip"/>

<!--电话-->
        <TextView
            android:id="@+id/p3_text_stu_password"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="电话"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dip"/>
        <EditText
            android:id="@+id/p3_edit_stu_password"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:hint="请输入电话"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/acu_line"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>

<!--QQ-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="QQ"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"/>
        <EditText
            android:id="@+id/p4_edit_stu_ident"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:hint="请输入QQ"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/acu_line"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>

<!--提交按钮-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@color/colorPrimary"/>


    </RelativeLayout>
</LinearLayout>