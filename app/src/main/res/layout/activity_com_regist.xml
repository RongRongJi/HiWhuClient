<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_com_update_title" />

    <!--标题：个人信息-->
    <TextView
        android:id="@+id/signUpTitle1"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:text="社团注册"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dip"/>

    <!--社团名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="社团名称"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip" />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:hint="请输入社团名称"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/acu_line"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>

<!--密码-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:text="密码"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dip"/>
    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:hint="请输入你的密码"
        android:background="#00000000"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginLeft="20dip"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/acu_line"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>

<!--确认密码-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:text="确认密码"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dip"/>
    <EditText
        android:id="@+id/confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:hint="请再输入一次密码"
        android:inputType="textPassword"
        android:background="#00000000"
        android:textSize="16sp"
        android:layout_marginLeft="20dip"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/acu_line"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>

<!--联系方式-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip" />
        <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:hint="请输入电话号码"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/acu_line"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>

<!--社团简介-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="社团简介"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:hint="请描述您的社团"
            android:gravity="top"
            android:background="#00000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dip"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/acu_line"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>
    <!--注册按钮-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip">
    <Button
        android:id="@+id/btn_com_regist"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:text="立即注册"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="@color/colorPrimary"/>
    </RelativeLayout>

</LinearLayout>
